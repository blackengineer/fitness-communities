<%= content_for :title, "Communities" %>
<%= turbo_stream_from :communities %>

<% content_for :left_content do %>
  <%= render "shared/sidebar_menu" %>
<% end %>

<% content_for :main_content do %>
  <div class="container px-4 mx-auto my-8">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-base mb-3">Edit community</h1>
    </div>
    <div class="p-8 bg-white border border-gray-300 dark:bg-gray-900 dark:border-gray-700 rounded-lg">
      <%= render "form", community: @community %>
      <%= link_to "Show this community", @community, class: "rounded-full py-2 px-5 ml-2 border border-gray-300 bg-white dark:bg-gray-900 inline-block text-gray-500 text-xs" %>
      <%= link_to "Back to communities", communities_path, class: "ml-2 rounded-full py-2 px-5 border border-gray-200 bg-white dark:bg-gray-900 inline-block text-gray-500 text-xs" %>
    </div>
  </div>
<% end %>

<%= render "shared/three_column_layout" %>
