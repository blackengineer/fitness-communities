<div class="col-span-1 divide-gray-200 rounded-lg border border-gray-300 bg-white dark:bg-gray-900 dark:border-gray-700">
  <div class="flex w-full items-center justify-between space-x-6 p-6">
    <div class="flex-1 truncate">
      <div class="flex items-center space-x-3">
        <%= image_tag avatar_url_for(post.user), class: "h-10 w-10 rounded-full ring-1 ring-gray-900/10" %>
        <h3 class="truncate text-xs font-medium text-gray-900 dark:text-white">Posted in <%= link_to post.community.name, community_path(post.community) %> â€¢ <span class="text-gray-500 font-normal text-xs dark:text-white"><%= time_ago_in_words(post.created_at) %> ago</span></br>
        by <span><%= link_to post.user.username, user_path(post.user), class: "text-gray-900 dark:text-white font-medium hover:underline cursor-pointer" %></span></h3>
      </div>
    </div>
  </div>
  
  <div class="text-sm mx-6 my-4">
    <a href="<%= post_path(post) %>">
      <div class="mb-3">
        <p class="text-base mb-3 font-semibold">
          <%= post.title %>
        </p>
  
        <% if post.url? %>
          <p class="mb-5 text-gray-600 dark:text-white">
            <%= post.url %>
          </p>
        <% end %>
        
        <% if post.media.attached? %>
          <div class="mb-5">
            <% if post.media.video? %>
              <%= video_tag post.media %>
            <% else %>
              <%= image_tag post.media, alt: post.title %>
            <% end %>
          </div>
        <% end %>
        
        <% if post.body %>
          <p class="mb-5 text-gray-600 dark:text-white line-clamp-3">
            <%= post.body %>
          </p>
        <% end %>
      </div>
    </a>
      <!-- Post metrics -->
