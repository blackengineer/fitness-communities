<div class="flex h-full flex-col">
  <!-- 3 column wrapper -->
  <div class="w-full grow lg:flex">
    <!-- Left sidebar & main wrapper -->
    <div class="flex-1 lg:flex">
      <div class="hidden lg:block border-b border-gray-300 dark:border-gray-700 py-6 xl:w-64 xl:shrink-0 xl:border-b-0 lg:border-r xl:border-r">
        <%= yield :left_content %>
      </div>

      <div class="px-4 py-6 sm:px-6 xl:flex-1 xl:pl-6">
        <!-- Main area -->
        <%= yield :main_content %>
      </div>
    </div>

    <div class="shrink-0 border-gray-300 px-4 py-6 sm:px-6 lg:w-80 lg:pr-8 xl:pr-6">
      <!-- Right column area -->
      <%= yield :right_content %>
    </div>
  </div>
</div>