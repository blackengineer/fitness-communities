<% content_for :left_content do %>
  <%= render "shared/sidebar_menu" %>
<% end %>

<% content_for :main_content do %>
<% end %>

<% content_for :right_content do %>
  <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center border border-gray-300 dark:bg-gray-900 dark:border dark:border-gray-700 dark:divide-gray-500">
    <div class="flex flex-1 flex-col p-8">
      <%= image_tag avatar_url_for(@user), class: "mx-auto h-16 w-16 flex-shrink-0 rounded-full" %>
      <h3 class="mt-6 text-sm font-medium text-gray-900 dark:text-white"><!-- @user.name --></h3>
      <dl class="mt-1 flex flex-grow flex-col justify-between">
        <dt class="sr-only">Title</dt>
        <dd class="flex items-center justify-center gap-x-1 text-sm dark:text-gray-200">
          @<%= @user.username %> 
          <% if @user.has_role?(:coach) %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#cf8d2e" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" />
            </svg>
          <% end %>
        </dd>
        <dt class="sr-only">Role</dt>
        <% if @user.has_role?(:admin) %>
          <dd class="mt-3">
            <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Admin</span>
          </dd>
        <% end %>
        <% if @user.has_role?(:coach) %>
          <dd class="mt-3">
            <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Coach</span>
          </dd>
        <% end %>
        <% if @user.has_role?(:moderator) %>
          <dd class="mt-3">
            <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Moderator</span>
          </dd>
        <% end %>
        <% if @user.has_role?(:employer) %>
          <dd class="mt-3">
            <span class="inline-flex items-center rounded-full bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Employer</span>
          </dd>
        <% end %>
      </dl>
    </div>
    <div>
      <div class="flex divide-x divide-gray-200 dark:divide-gray-500">
        <div class="flex w-0 flex-1">
          <div class="flex items-center justify-center w-0 flex-1 my-1">
            <%= link_to "#", class: "text-gray-900 font-medium group flex gap-x-3 rounded-md p-2 text-sm leading-6 dark:text-gray-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Follow
          <% end %>
          </div>
        </div>
        <div class="flex items-center justify-center w-0 flex-1">
          <%= link_to "#", class: "text-gray-900 font-medium group flex gap-x-3 rounded-md p-2 text-sm leading-6 dark:text-gray-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 01.778-.332 48.294 48.294 0 005.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
            </svg>
            Message
          <% end %>
        </div>
      </div>
    </div>
  </li>
<% end %>

<%= render "shared/three_column_layout" %>